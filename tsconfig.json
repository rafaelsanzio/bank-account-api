{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",

    "outDir": "./dist",
    "rootDir": "./",

    "strict": true,
    "strictPropertyInitialization": false,

    "baseUrl": "./",
    "paths": {},

    "esModuleInterop": true,

    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}
