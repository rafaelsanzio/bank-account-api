{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",

    "outDir": "./dist",
    "rootDir": "./",

    "strict": true,
    "strictPropertyInitialization": false,

    "baseUrl": "./src",
    "paths": {
      "@modules/*": ["modules/*"],
      "@shared/*": ["shared/*"],
      "@errors/*": ["errors/*"],
      "@utils/*": ["utils/*"]
    },

    "esModuleInterop": true,

    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}
